public class Util {
    public static void aguarde(int milissegundos) {
        try {
            Thread.sleep(milissegundos);
        } catch (InterruptedException e) {
            Thread.currentThread().interrupt();
        }
    }

    public static void limpa() {
        // LÃ³gica para limpar o console
        for (int i = 0; i < 50; i++) {
            System.out.println();
        }
    }
}

